{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "emulators": {
    "apphosting": {
      "port": 5002,
      "rootDirectory": "~/studio"
    },
    "auth": {
      "port": 4000
    },
    "functions": {
      "port": 4000
    },
    "database": {
      "port": 4000
    },
    "storage": {
      "port": 4000
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
